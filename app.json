{
  "expo": {
    "name": "Colombian Spanish",
    "slug": "colombian-spanish",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0f172a",
      "dark": {
        "image": "./assets/splash.png",
        "backgroundColor": "#0f172a"
      }
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mikepitts.colombianspanish",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app uses the microphone for speech recognition practice.",
        "NSSpeechRecognitionUsageDescription": "This app uses speech recognition to help you practice pronunciation."
      }
    },
    "android": {
      "package": "com.mikepitts.colombianspanish",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0f172a"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-speech"
    ],
    "extra": {
      "eas": {
        "projectId": "colombian-spanish-srs"
      }
    },
    "owner": "mikepitts25"
  }
}